import { getCollection } from 'astro:content';
// 1. Generate a new path for every collection entry
export async function getStaticPaths() {
  const blogEntries = await getCollection('pages');
  // console.log(blogEntries)
  return blogEntries.map(entry => ({
    params: { generic: entry.slug }, props: { entry },
  }));
}
// 2. For your template, you can get the entry directly from the prop
const { entry } = Astro.props;
const { Content, headings } = await entry.render();
let path = '../content/pages/' + entry.id
let entryHMTL = await import( /* @vite-ignore */ path)
  .then((data) => {
    return data.compiledContent()
  })
  .catch((err) => {
    console.error(err)
  })
const splitArray = entryHMTL.split('\n')
