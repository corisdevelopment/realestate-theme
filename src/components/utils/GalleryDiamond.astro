    <div class="gallery grid grid-cols-6 gap-2">
      <!-- Row 1 -->
      <div class="col-start-3 col-span-2 row-start-1 row-span-2">
        <div class="rotate overflow-hidden">
          <img src={testImg} alt="" class="rounded-lg">
        </div>
      </div>
      <!-- Row 2 -->
      <div class="col-start-2 col-span-2 row-span-2 row-start-2">
        <div class="rotate overflow-hidden">
          <img src={testImg} alt="" class="rounded-lg">
        </div>
      </div>
      <div class="col-start-4 col-span-2 row-span-2 row-start-2">
        <div class="rotate overflow-hidden">
          <img src={testImg} alt="" class="rounded-lg">
        </div>
      </div>
      <!-- Row 3 -->
      <div class="col-start-1 col-span-2 row-span-2 row-start-3">
        <div class="rotate overflow-hidden">
          <img src={testImg} alt="" class="rounded-lg">
        </div>
      </div>
      <div class="col-start-3 col-span-2 row-span-2 row-start-3">
