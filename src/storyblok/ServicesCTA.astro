---
import Image from 'astro/components/Image.astro'
import { storyblokEditable } from '@storyblok/astro'
import StoryblokComponent from "@storyblok/astro/StoryblokComponent.astro"

const { blok, image = blok.image } = Astro.props; 
// console.log(blok)
---
<section>
  <div id="servicesCTA" class="bg-golden-300 w-full flex justify-center text-golden-950">
    <div class="absolute top-[14%] left-0 w-full max-lg:px-8">
      <h2 id="serviceHeadline" class="text-center text-6xl lg:text-8xl font-cg">{blok.headline}</h2>
    </div>
    <div id="circleReveal" class="overlay py-16 lg:py-20">
      <div class="circles">
        <div {...storyblokEditable(blok)} class="container mx-auto p-8 mb-8 mt-8 lg:mt-16 grid grid-cols-1 lg:grid-cols-2 gap-x-6">
          <div class="flex-1 text-md lg:text-xl mb-8" aria-label="Text Content">
            {
              blok.services?.map((blok: any) => {
                return <StoryblokComponent blok={blok} />
              })
            }
          </div>
          <div class="image flex-1 rounded-md lg:rounded-2xl shadow-2xl">
            <Image width={1080} height={600} src={image.filename} alt={image.alt} class="aspect-auto" aria-describedby="Image content" />
          </div>
        </div>
      </div>
    </div>
    
  </div>
</section>


<style>
  #servicesCTA {
    min-height: min-content;
    position: relative;
    overflow: hidden;
    background-image: linear-gradient(rgba(201, 177, 123, 0.8), rgba(169, 132, 73, 0.6) 50%), url(/src/assets/stone_texture.webp);
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
  }
  .overlay {
    min-height: 100%;
    min-width: 100%;
    background-color:  #fff;
    clip-path: circle(0%);
    position: relative;
    z-index: 1;
    /* overflow: hidden; */
  }
  #serviceHeadline {
    opacity: 0.2;
  }
  .container {
    max-width: var(--max-content);
    position: relative;
    z-index: 3;
  }
  .cirlces {
    position: relative;
    z-index: 2;
  }
  .circles::before {
    content: '';
    width: 30vw;
    height: 30vw;
    border-radius: 50%;
    border: solid 2px #b59250 !important;
    position: absolute;
    top: 0px;
    left: -8%;
    opacity: 0.3;
  }
  .circles::after {
    content: '';
    width: 60vw;
    height: 60vw;
    border-radius: 50%;
    border: solid 2px #b59250 !important;
    background-color: #b59250 !important;
    position: absolute;
    top: 60%;
    /* bottom: -60%; */
    right: -18%;
    opacity: 0.8;
  }
  .image {
    max-height: 540px;
    height: 100%;
    position: relative;
    z-index: 1;
    overflow: hidden;
    background-image: none;
    background-position: 100%;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
  }

  @media screen and (min-width: 1024px) {
    .image {
    overflow: hidden;
    max-height: 680px;
  }
  img {
    max-height: 100%;
    /* height: 100%; */
    max-width: unset;
    transform: translateX(-16.6%);
  }
  }
</style>