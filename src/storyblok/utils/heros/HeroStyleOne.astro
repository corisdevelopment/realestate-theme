---
import { storyblokEditable } from "@storyblok/astro";
import StoryblokComponent from "@storyblok/astro/StoryblokComponent.astro";
const text = "hello";
const { imageUrl, blok } = Astro.props;

// Cleanup variables later
const className = "";
console.log(imageUrl);
---

<section
  {...storyblokEditable(blok)}
  class:list={["hero flex flex-col border-b-8 border-golden-600", className]}
>
  <div class="hero-content w-full">
    <div class="mt-[20vh] md:mt-[50vw] lg:mt-[20vh] lg:container mx-auto">
      {
        blok.content?.map((blok: any) => {
          return <StoryblokComponent blok={blok} />;
        })
      }

      <div
        class="icon md:w-5/6 lg:w-4/6 2xl:w-3/6 flex justify-center mt-8 text-golden-600"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="1em"
          height="1em"
          viewBox="0 0 512 512"
        >
          <path
            fill="none"
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="18"
            d="m112 268l144 144l144-144M256 392V100"></path>
        </svg>
      </div>
    </div>
  </div>
  <div class="hero-image absolute inset-x-0 top-0 border-b-8 border-golden-600">
  </div>
</section>

<style define:vars={{ imageUrl }}>
  .icon > svg {
    height: 6em;
    width: auto;
  }
  .hero {
    min-height: 100vh;
    max-height: max-content;
    /* height: 100vh; */
    width: 100%;
    position: relative;
    background-color: #111;
  }
  .hero-content {
    z-index: 1;
    height: fit-content;
    padding: 2rem;
  }
  .hero-content > div {
    max-width: var(--max-content);
  }
  .hero-image {
    position: absolute;
    top: 0;
    z-index: 0;
    height: 72%;
    width: 100%;
    background: center/cover no-repeat var(--imageUrl);
  }
</style>
